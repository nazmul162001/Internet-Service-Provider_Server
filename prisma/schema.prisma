// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  email            String            @unique
  password         String
  role             String?           @default("user")
  name             String?           @default("")
  profileImage     String?           @default("")
  phoneNumber      String?           @default("")

  @@map("users")
}

model Service {
  id   String  @id @default(uuid())
  name String   
  price Int
  category String
  images String
  location String
  description String
  channel String
  hdChannel String
  connectionCost Int
  status String
  reviews Review[]

  @@map("services")
}

model Review {
  id         String  @id @default(uuid())
  name       String
  email      String
  userReview String
  serviceId String
  service    Service @relation(fields: [serviceId], references: [id])

  @@map("reviews")
}

model FeedBack {
  id String @id @default(uuid())
  name String
  email String
  comments String

  @@map("feedbacks")
}

model Blog {
  id String @id @default(uuid())
  title String
  name String
  images String
  description String
  createdAt    DateTime      @default(now())

  @@map("blogs")
}

model Faq {
  id String @id @default(uuid())
  title String
  description String

  @@map("faqs")
}

